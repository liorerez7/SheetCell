<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>chat.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetSheetCellAndLoadXML</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.InitSheetServlet.GetSheetCellAndLoadXML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAndUpdateCellServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.ActionLineServlet.GetAndUpdateCellServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRangeServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.RangeServlets.AddRangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SortRangeServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.RangeServlets.SortServlets.SortRangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteRangeServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.RangeServlets.DeleteRangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterRangeServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.RangeServlets.FilterServlets.FilterRangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUniqueStringsInColumnsServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.RangeServlets.UtilityServlets.GetUniqueStringsInColumnsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginShortResponseServlet</servlet-name>
        <servlet-class>chat.servlets.LightweightLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetRangeServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.RangeServlets.GetRangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/pages/signup/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterRangeServlet</servlet-name>
        <url-pattern>/filterSheetCell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUniqueStringsInColumnsServlet</servlet-name>
        <url-pattern>/uniqueStringsInColumn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SortRangeServlet</servlet-name>
        <url-pattern>/sortSheetCell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAndUpdateCellServlet</servlet-name>
        <url-pattern>/updateCell</url-pattern>
        <url-pattern>/requestedCell</url-pattern>
    </servlet-mapping>
<!--    <servlet-mapping>-->
<!--        <servlet-name>GetAndUpdateCellServlet</servlet-name>-->
<!--        <url-pattern>/requestedCell</url-pattern>-->
<!--    </servlet-mapping>-->
    <servlet-mapping>
        <servlet-name>AddRangeServlet</servlet-name>
        <url-pattern>/addRange</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteRangeServlet</servlet-name>
        <url-pattern>/deleteRange</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetRangeServlet</servlet-name>
        <url-pattern>/requestedRange</url-pattern>
        <url-pattern>/allRanges</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetSheetCellAndLoadXML</servlet-name>
        <url-pattern>/xmlAddress</url-pattern>
        <url-pattern>/sheetCell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginShortResponseServlet</servlet-name>
        <url-pattern>/loginShortResponse</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>chat.servlets.AppContextListener</listener-class>
    </listener>
</web-app>