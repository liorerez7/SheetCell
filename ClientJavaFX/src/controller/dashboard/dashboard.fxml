<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.dashboard.DashboardController">
    <BorderPane>
        <top>
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
                <Button fx:id="loadSheetFileButton" onAction="#onLoadSheetFileButtonClicked" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Load Sheet File Button" />
                <Label fx:id="usernameLabel" style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Username" />
            </HBox>
        </top>
        <center>
            <VBox spacing="10" style="-fx-padding: 10;">
                <TableView fx:id="availableSheetsTable" prefHeight="200" style="-fx-border-color: #dcdcdc; -fx-border-radius: 5px;">
                    <columns>
                        <TableColumn fx:id="ownerColumn" prefWidth="100.0" text="Owner" />
                        <TableColumn fx:id="sheetNameColumn" prefWidth="100.0" text="Sheet Name" />
                        <TableColumn fx:id="sizeColumn" prefWidth="100.0" text="Size" />
                        <TableColumn fx:id="myPermissionStatusColumn" prefWidth="100.0" text="My Permission Status" />
                    </columns>
                </TableView>
                <TableView fx:id="permissionsTable" prefHeight="200" style="-fx-border-color: #dcdcdc; -fx-border-radius: 5px;">
                    <columns>
                        <TableColumn fx:id="usernameColumn" prefWidth="100.0" text="Username" />
                        <TableColumn fx:id="permissionStatusColumn" prefWidth="100.0" text="Permission Status" />
                        <TableColumn fx:id="approvedByOwnerColumn" prefWidth="100.0" text="Approved by Owner" />
                    </columns>
                </TableView>
            </VBox>
        </center>
        <right>
            <VBox alignment="TOP_CENTER" prefHeight="414.0" prefWidth="237.0" spacing="10" style="-fx-padding: 10; -fx-background-color: #add8e6; -fx-background-radius: 5px;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Commands:" />
                <Button fx:id="viewSheetButton" onAction="#onViewSheetButtonClicked" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="View Sheet" />
                <Button fx:id="requestPermissionButton" onAction="#onRequestPermissionButtonClicked" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Request Permission" />
                <Button fx:id="askDenyPermissionButton" onAction="#onAskDenyPermissionButtonClicked" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Ask/Deny Permission Request" />
            <BorderPane.margin>
               <Insets top="10.0" />
            </BorderPane.margin>
            </VBox>
        </right>
    </BorderPane>
</ScrollPane>
