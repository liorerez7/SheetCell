<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>chat.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>chat.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendChatMessageServlet</servlet-name>
        <servlet-class>chat.servlets.SendChatMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>chat.servlets.ChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetSheetCellAndLoadXML</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.InitSheetServlet.GetSheetCellAndLoadXML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMySheetNameServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.InitSheetServlet.GetMySheetNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetSheetNamesServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.InitSheetServlet.GetSheetNamesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateSheetNameParam</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.UpdateSeassionParams.updateSheetNameParam</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveCurrentSheetCellServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.SheetStateServlet.SaveCurrentSheetCellServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RestoreCurrentSheetCellServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.SheetStateServlet.RestoreCurrentSheetCellServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IsSheetUpdatedServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.SheetStateServlet.IsSheetUpdatedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAndUpdateCellServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.ActionLineServlet.GetAndUpdateCellServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUserNameLastUpdatedCellServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.ActionLineServlet.GetUserNameLastUpdatedCellServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRangeServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.RangeServlets.AddRangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteRangeServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.RangeServlets.DeleteRangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginShortResponseServlet</servlet-name>
        <servlet-class>chat.servlets.LightweightLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetRangeServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.RangeServlets.GetRangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPermissionLinesForSheet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.permissions.GetPermissionLinesForSheet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMyPermissionForSheet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.permissions.GetMyPermissionForSheet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestPermissionServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.permissions.RequestPermissionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateResponsePermissionServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.permissions.UpdateResponsePermissionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResponsePermissionServlet</servlet-name>
        <servlet-class>chat.servlets.SheetComponentsServlets.permissions.ResponsePermissionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/pages/signup/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendChatMessageServlet</servlet-name>
        <url-pattern>/chat/sendMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/chat/sendChat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logoutShortResponse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateSheetNameParam</servlet-name>
        <url-pattern>/updateSheetNameInSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveCurrentSheetCellServlet</servlet-name>
        <url-pattern>/saveCurrentSheetCellState</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RestoreCurrentSheetCellServlet</servlet-name>
        <url-pattern>/restoreCurrentSheetCellState</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IsSheetUpdatedServlet</servlet-name>
        <url-pattern>/isSheetUpdated</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAndUpdateCellServlet</servlet-name>
        <url-pattern>/updateCell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserNameLastUpdatedCellServlet</servlet-name>
        <url-pattern>/userNameThatLastUpdatedCell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRangeServlet</servlet-name>
        <url-pattern>/addRange</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteRangeServlet</servlet-name>
        <url-pattern>/deleteRange</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetRangeServlet</servlet-name>
        <url-pattern>/requestedRange</url-pattern>
        <url-pattern>/allRanges</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetSheetCellAndLoadXML</servlet-name>
        <url-pattern>/xmlAddress</url-pattern>
        <url-pattern>/sheetCell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetSheetNamesServlet</servlet-name>
        <url-pattern>/allSheetNames</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMySheetNameServlet</servlet-name>
        <url-pattern>/mySheetName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginShortResponseServlet</servlet-name>
        <url-pattern>/loginShortResponse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPermissionLinesForSheet</servlet-name>
        <url-pattern>/permissionLinesForSheet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestPermissionServlet</servlet-name>
        <url-pattern>/requestPermission</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResponsePermissionServlet</servlet-name>
        <url-pattern>/myResponsePermission</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateResponsePermissionServlet</servlet-name>
        <url-pattern>/updateResponsePermission</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMyPermissionForSheet</servlet-name>
        <url-pattern>/myPermissionForSheet</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>chat.servlets.AppContextListener</listener-class>
    </listener>
</web-app>