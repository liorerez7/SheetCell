<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>chat.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitSheetCellServlet</servlet-name>
        <servlet-class>chat.servlets.InitSheetCellServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCellServlet</servlet-name>
        <servlet-class>chat.servlets.UpdateCellServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginShortResponseServlet</servlet-name>
        <servlet-class>chat.servlets.LightweightLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/pages/signup/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCellServlet</servlet-name>
        <url-pattern>/updateCell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCellServlet</servlet-name>
        <url-pattern>/requestedCell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitSheetCellServlet</servlet-name>
        <url-pattern>/xmlAddress</url-pattern>
        <url-pattern>/sheetCell</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginShortResponseServlet</servlet-name>
        <url-pattern>/loginShortResponse</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>chat.servlets.AppContextListener</listener-class>
    </listener>
</web-app>