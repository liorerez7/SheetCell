<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Main.MainController" prefHeight="626.0" prefWidth="1005.0">

    <!-- MenuBar at the top spanning the entire width -->
    <top>
        <VBox>
            <!-- MenuBar -->
            <fx:include fx:id="menuBar" source="../MenuBar/MenuBar.fxml" />

            <!-- Action Line right below the MenuBar -->
            <fx:include source="../actionLine/ActionLine.fxml" />
        </VBox>
    </top>

    <!-- Left side with two VBox elements for Customize and Ranges -->
    <left>
        <VBox spacing="10.0" alignment="TOP_CENTER" prefWidth="200.0">
            <fx:include source="../Customize/Customize.fxml" />
            <fx:include source="../Ranges/Ranges.fxml" />
        </VBox>
    </left>

    <!-- Center space for the dynamically initialized grid -->
    <center>
        <GridPane fx:id="dynamicGrid" />
    </center>
</BorderPane>